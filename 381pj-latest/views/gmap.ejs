<html>
    <head> 
        <title>Google Map Example</title>
		<link rel="stylesheet" type="text/css" href="layout.css">
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&key=AIzaSyDoacwkda5BFxrMglta9q4NP9jmCh4NO-o"></script>
        <script type="text/javascript">
            var loadMap = function() 
            {
				var myLatLng = {lat: <%=c.address.coord[0]%>, lng: <%=c.address.coord[1]%>};
                var map = new google.maps.Map(document.getElementById("map"),{
				      zoom: <%=zoom%>,
				      center: myLatLng
				}); 
				var map = new google.maps.Marker({
					position: myLatLng,
					map: map,
					title: 'OUHK'
				});
            };
            window.onload= loadMap;
        </script>
    </head>
	    <body>
	 	<header><h1><%=c.name%></h1></header>
			<aside>
        	<div id="map" style="width:500px;height:500px;">
			</aside>
    </body>
</html>